<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/big_placeholder"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.4" />

    <ImageView
        android:id="@+id/iv_back"
        android:src="@mipmap/my_back_black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/iv_head"
        android:src="@mipmap/account_gray"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/tv_club_name"
        android:text="俱乐部"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_below="@id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_club_brand"
        android:layout_below="@id/tv_club_name"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="8dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"
            android:background="@color/blue"/>
        <TextView
            android:id="@+id/tv"
            android:text="品牌简介"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:layout_height="1px"
            android:background="@color/gray"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/ll_club_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="哈哈哈哈哈哈哈哈哈或或或或或或哈哈或或或或或或哈哈或或或或或或哈哈或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或或"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>