<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@drawable/shape_fillet_white_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/blue"
                android:text="权益类别"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_16"
                android:text="手续费"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/text_black3"
                android:text="延期"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_delay"
                android:gravity="center"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_16"
                tools:text="10%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/text_black3"
                android:text="停卡"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_stop_card"
                android:gravity="center"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_16"
                tools:text="10%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/text_black3"
                android:text="转让"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_transform"
                android:gravity="center"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_16"
                tools:text="10%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/text_black3"
                android:text="转店"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_exchange_shop"
                android:gravity="center"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_16"
                tools:text="10%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/text_black3"
                android:text="退卡"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_back_card"
                android:gravity="center"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_16"
                tools:text="10%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="@color/text_black3"
                android:text="卡品转换"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_card_transform"
                android:gravity="center"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_16"
                tools:text="10%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>