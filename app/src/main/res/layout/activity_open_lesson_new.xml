<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@mipmap/bg_lesson">
                <ImageView
                    android:paddingRight="21dp"
                    android:paddingTop="4dp"
                    android:layout_marginTop="3dp"
                    android:paddingBottom="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/white_arrow_back"/>

                <RelativeLayout
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:background="@mipmap/lesson_button"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_shangke"
                        android:layout_marginTop="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上课打卡"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        />
                    <!--<TextView-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginBottom="36dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="12:30:14"-->
                    <!--android:textSize="20sp"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--/>-->
                    <Chronometer
                        android:id="@+id/chronometer"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="36dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/tv_shangke1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课时间 :"
                    android:textColor="@color/text_black1"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_toRightOf="@+id/tv_shangke1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="09:00:07"
                    android:textColor="@color/text_black1"
                    android:textSize="14sp"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/division"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/tv_shangke2"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下课时间 :"
                    android:textColor="@color/text_black1"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_toRightOf="@+id/tv_shangke2"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="12:30:07"
                    android:textColor="@color/text_black1"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上课记录表"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_open_lesson"
                android:background="@drawable/shape_fillet_white_8"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>