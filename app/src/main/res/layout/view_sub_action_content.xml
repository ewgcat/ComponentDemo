<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/lin_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/iv_action"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/bk_2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>


            <TextView
                android:id="@+id/tv_action_group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_toRightOf="@id/iv_action"/>

            <TextView
                android:id="@+id/tv_action_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0197f8"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_sub_content_cotainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="15dp">

    </LinearLayout>



</LinearLayout>
