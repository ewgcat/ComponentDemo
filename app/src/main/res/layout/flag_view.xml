<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_flag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/flag_popuwindow_backgroud"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/sign_green" />

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/sign_red" />

    <ImageView
        android:id="@+id/iv_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/sign_blue" />

    <View
        android:id="@+id/line"
        android:layout_width="1px"
        android:layout_marginLeft="10dp"
        android:layout_height="20dp"
        android:background="@color/gray"/>
    <ImageView
        android:id="@+id/iv_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/sign_white" />


</LinearLayout>