<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.workspace.dynamic_assessment.DynamicFragment3">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/white">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="若有跑步机，在跑步机上慢速走；无跑步机，则五米左右距离内往返走;"
           android:padding="15dp"
           android:textStyle="bold"
           android:textColor="@color/text_black1"
           android:textSize="@dimen/text_size_17"/>

       <View
           style="@style/SplitLineStyle"
           android:layout_height="10dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp"
           android:gravity="center_vertical">

           <View
               android:layout_width="10dp"
               android:layout_height="10dp"
               android:background="#1996f8" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="正面观"
               android:textStyle="bold"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="足部-外摆"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_foot_out"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="膝盖-左膝"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_knee_left"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="膝盖-右膝"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_knee_right"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_height="10dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:padding="15dp">

           <View
               android:layout_width="10dp"
               android:layout_height="10dp"
               android:background="#1996f8" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="侧面观"
               android:textStyle="bold"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="腰椎-盆骨-髋-盆骨"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_yao_pg"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="腰椎-盆骨-髋-腹部"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_yao_fb"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="头部"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_side_header"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>


       <View
           style="@style/SplitLineStyle"
           android:layout_height="10dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:padding="15dp">

           <View
               android:layout_width="10dp"
               android:layout_height="10dp"
               android:background="#1996f8" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="背面观"
               android:textStyle="bold"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="肩部 高低肩"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_jian"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>

       <View
           style="@style/SplitLineStyle"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="头部 倾斜"
               android:textColor="@color/text_black1"
               android:textSize="@dimen/text_size_17"/>

           <com.yijian.staff.mvp.workspace.dynamic_assessment.DynamicCheckGroup
               android:id="@+id/dynamic_bg_header"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="right"
               />

       </LinearLayout>



   </LinearLayout>

</ScrollView>