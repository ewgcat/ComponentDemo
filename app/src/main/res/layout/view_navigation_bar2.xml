<?xml version="1.0" encoding="utf-8"?>
<com.yijian.staff.widget.NavigationBar2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationbar2"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_first_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/white_arrow_back" />
        </LinearLayout>



        <ImageView
            android:id="@+id/iv_second_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/jd_close" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="标题"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp">
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/right_tv"
                android:text="右边"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>



    </LinearLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
</com.yijian.staff.widget.NavigationBar2>