<?xml version="1.0" encoding="utf-8"?>
<com.yijian.staff.widget.Bottombar xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="50dp"

                                   android:id="@+id/home_bottom_bar"
                                   android:background="@color/white"
                                   android:orientation="vertical">
    <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
    <LinearLayout
            android:layout_marginLeft="14dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:background="@color/white"
                android:clickable="true"
                android:id="@+id/ll_main_work"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:src="@mipmap/icon_work_unselected"
                    android:id="@+id/iv_main_work"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"/>

            <TextView
                    android:textColor="@color/gray"
                    android:id="@+id/tv_main_work"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="工作台"/>


        </LinearLayout>
        <LinearLayout
                android:background="@color/white"
                android:id="@+id/ll_main_reporting"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical">

            <ImageView
                    android:src="@mipmap/icon_report_unselected"
                    android:id="@+id/iv_main_reporting"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"/>

            <TextView
                    android:id="@+id/tv_main_reporting"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"

                    android:textSize="12sp"
                    android:text="报表"/>


        </LinearLayout>


        <LinearLayout
                android:background="@color/white"
                android:clickable="true"
                android:id="@+id/ll_main_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:src="@mipmap/icon_message_unselected"
                    android:id="@+id/iv_main_message"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"/>

            <TextView
                    android:textColor="@color/gray"
                    android:id="@+id/tv_main_message"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="消息"/>


        </LinearLayout>

        <LinearLayout
                android:background="@color/white"
                android:layout_marginRight="14dp"

                android:clickable="true"
                android:id="@+id/ll_main_mime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:src="@mipmap/icon_mine_unselected"
                    android:id="@+id/iv_main_mime"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"/>

            <TextView
                    android:textColor="@color/gray"
                    android:id="@+id/tv_main_mime"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="我的"/>


        </LinearLayout>

    </LinearLayout>


</com.yijian.staff.widget.Bottombar>