<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/gray_bg"
    android:focusableInTouchMode="true">
    <include
        android:id="@+id/step_two_navigation_bar2"
        layout="@layout/view_navigation_bar2" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:id="@+id/step_two_timebar"
                layout="@layout/view_time_bar" />
            
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="215dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/shape_fillet_white_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体测数据"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_marginTop="64dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_fillet_gray_5"
                    android:layout_height="35dp">
                    <TextView
                        android:text="姓名"
                        android:textSize="14sp"
                        android:textColor="@color/text_black3"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_alignParentRight="true"
                        tools:text="张山"
                        android:textSize="14sp"
                        android:textColor="@color/text_black1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/rl_name"
                    android:id="@+id/rl_height"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_fillet_gray_5"
                    android:layout_height="35dp">
                    <TextView
                        android:text="身高(cm)"
                        android:textSize="14sp"
                        android:textColor="@color/text_black3"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_height"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:text="请选择"
                        android:textSize="14sp"
                        android:textColor="@color/text_black1"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/lg_arrow"
                        android:drawablePadding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/rl_height"
                    android:id="@+id/rl_age"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_fillet_gray_5"
                    android:layout_height="35dp">
                    <TextView
                        android:text="年龄(岁)"
                        android:textSize="14sp"
                        android:textColor="@color/text_black3"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_age"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:text="请选择"
                        android:textSize="14sp"
                        android:textColor="@color/text_black1"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/lg_arrow"
                        android:drawablePadding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:elevation="2dp">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="16sp"
                    android:textColor="@color/text_black3"
                    android:background="@drawable/shape_fillet_gray_20"
                    android:layout_width="141dp"
                    android:layout_height="40dp" />


                <RelativeLayout
                    android:id="@+id/rl_save"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/jd_baocuntice"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:id="@+id/tv_save"
                        android:layout_centerHorizontal="true"
                        android:text="保存"
                        android:layout_marginTop="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@+id/tv_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:text="(已完成30道题,总共50道)"
                        />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>