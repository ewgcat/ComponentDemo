<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="取消"
                android:textColor="#999999"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="确定"
                android:textSize="16sp"
                android:textColor="@color/blue" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/people" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:ellipsize="end"
                        android:maxWidth="120dp"
                        android:singleLine="true"
                        android:text="刘岩岩"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/lg_man" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:text="增肌课(60分钟)"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:text="选择日期"
            android:textColor="#333333"
            android:textSize="18sp" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexDirection="row"
            app:flexWrap="wrap">


            <LinearLayout
                android:id="@+id/ll_week_sunday"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周日"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line7"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_one"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周一"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_two"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周二"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_three"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周三"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_four"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周四"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line4"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_five"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周五"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line5"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_six"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="14%">

                <TextView
                    android:id="@+id/tv_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="周六"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line6"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@color/blue" />


            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课开始时间"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_course_time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#f76666"
                android:textSize="14sp"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.contrarywind.view.WheelView
                android:id="@+id/wheelview1"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textColor="#333333"
                android:textSize="18sp" />

            <com.contrarywind.view.WheelView
                android:id="@+id/wheelview2"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>