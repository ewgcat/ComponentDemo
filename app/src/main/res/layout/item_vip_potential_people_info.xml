<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/white_bg">

        <LinearLayout
            android:id="@+id/ll_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/people"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘葛岩"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/lg_man"/>

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="潜在会员"
                    android:textColor="#1997f8"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:visibility="gone"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="生日:"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="1992-12-22"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="生日类型:"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_birth_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="农历"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="身体状态:"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_bodyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="正常"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="健身爱好:"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_bodybuildingHobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="哑铃"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="兴趣爱好: "
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_interestHobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="打篮球、游泳"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="使用车辆:"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_useCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="无"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="15dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp"
                android:background="@color/gray"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <LinearLayout
                android:id="@+id/lin_huifan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_huifang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/wt_huifang"/>
                <TextView
                    android:id="@+id/tv_huifang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回访"
                    android:layout_marginLeft="7dp"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/lin_yaoyue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/wt_yaoyue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀约"
                    android:textColor="#999999"
                    android:layout_marginLeft="7dp"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
