<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/query_questions_bg"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="问卷调查"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/lg_check"
            android:drawablePadding="8dp"
            android:text="信息来源(单选)" />

        <RadioGroup
            android:id="@+id/infoSourceGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/infoSourceGroup1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  报纸" />

            <RadioButton
                android:id="@+id/infoSourceGroup1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  电视TV" />

            <RadioButton
                android:id="@+id/infoSourceGroup1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  广播" />

            <RadioButton
                android:id="@+id/infoSourceGroup1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/question_check_selector"
                android:text="  朋友介绍" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/infoSourceGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/infoSourceGroup2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  广告牌" />

            <RadioButton
                android:id="@+id/infoSourceGroup2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  传单" />

            <RadioButton
                android:id="@+id/infoSourceGroup2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  会员介绍" />

            <RadioButton
                android:id="@+id/infoSourceGroup2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/question_check_selector"
                android:text="  邮寄宣传" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/infoSourceGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/infoSourceGroup3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:text="  电话拜访" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/infoSourceGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/infoSourceGroup4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:button="@drawable/question_check_selector"
                    android:text="  其他" />

            </RadioGroup>

            <EditText
                android:id="@+id/et_else"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/query_questions_edit_bg"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:lineSpacingMultiplier="1.1"
            android:text="(2)  您希望通过健身运动来帮助您完成什么目标吗？(多选)" />

        <LinearLayout
            android:id="@+id/targetGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:checked="false"
                android:text="  减重" />

            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:checked="false"
                android:text="  增重" />

            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:checked="false"
                android:text="  增加肌肉" />

            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/question_check_selector"
                android:checked="false"
                android:text="  结实紧实线条" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/targetGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:button="@drawable/question_check_selector"
                android:checked="false"
                android:text="  心肺功能" />

            <CheckBox
                android:id="@+id/checkbox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/question_check_selector"
                android:checked="false"
                android:text="  增加力量" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:lineSpacingMultiplier="1.2"
            android:text="(3)  您身体的哪一部分的曲线是您最在乎的，最关心的呢？" />

        <EditText
            android:gravity="top"
            android:id="@+id/et_care"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:background="@drawable/query_questions_edit_bg" />
    </LinearLayout>


</LinearLayout>