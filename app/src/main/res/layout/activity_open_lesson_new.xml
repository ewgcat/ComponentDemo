<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:background="@mipmap/bg_lesson"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                <ImageView
                        android:id="@+id/iv_finish"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="21dp"
                        android:paddingTop="4dp"
                        android:src="@mipmap/white_arrow_back"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                        <Chronometer
                                android:id="@+id/chronometer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2018-01-23"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <RelativeLayout
                                android:id="@+id/rel_punch_card"
                                android:layout_width="118dp"
                                android:layout_height="118dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/lesson_button"
                                android:clickable="true">

                            <TextView
                                    android:id="@+id/tv_shangke_statu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerInParent="true"
                                    android:text="上课打卡"
                                    android:textColor="@color/blue1997f8"
                                    android:textSize="14sp"/>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp">

                <TextView
                        android:id="@+id/tv_shangke_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="上课时间 :"
                        android:textColor="@color/text_black1"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/tv_shangke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_shangke_label"
                        android:text=""
                        android:textColor="@color/text_black1"
                        android:textSize="14sp"/>

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/division"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp">

                <TextView
                        android:id="@+id/tv_xiake_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="下课时间 :"
                        android:textColor="@color/text_black1"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/tv_xiake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_xiake_label"
                        android:text=""
                        android:textColor="@color/text_black1"
                        android:textSize="14sp"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="上课记录表"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_open_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_fillet_white_8"
                    android:visibility="gone"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>