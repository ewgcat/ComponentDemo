<?xml version="1.0" encoding="utf-8"?>
<com.yijian.clubmodule.widget.Bottombar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="14dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_work"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_work"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_work_unselected" />

            <TextView
                android:id="@+id/tv_main_work"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="工作台"
                android:textColor="@color/gray"
                android:textSize="10sp" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_main_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_main_message"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_message_unselected" />

                <View
                    android:id="@+id/view_notice"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/red_circle_bg"
                    android:textColor="@color/white"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_main_message"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="业务消息"
                android:textColor="@color/gray"
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_mime"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_mime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_mine_unselected" />

            <TextView
                android:id="@+id/tv_main_mime"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/gray"
                android:textSize="10sp"
         />


        </LinearLayout>

    </LinearLayout>


</com.yijian.clubmodule.widget.Bottombar>