<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/white_bg">

        <LinearLayout
                android:id="@+id/ll_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingTop="15dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@mipmap/people"/>

                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘葛岩"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                <ImageView
                        android:id="@+id/iv_gender"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/lg_man"/>


            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="课类别:"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"/>

                <TextView
                        android:id="@+id/tv_class_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="私教课"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="课名称:"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"/>

                <TextView
                        android:id="@+id/tv_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="瑜伽课"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="上课时间:"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"/>

                <TextView
                        android:id="@+id/tv_class_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2018-01-02"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="课程数量:"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"/>

                <TextView
                        android:id="@+id/tv_class_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="3"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="上课次数: "
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"/>

                <TextView
                        android:id="@+id/tv_has_shang_class_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp"
                    android:background="@color/gray"
            />

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/lin_beike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="15dp"
                android:gravity="center"
                android:paddingBottom="16dp">

            <TextView
                    android:id="@+id/tv_beike_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备课"
                    android:textColor="#999999"
                    android:drawableLeft="@mipmap/preparelessons"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
