<?xml version="1.0" encoding="utf-8"?>
<com.yijian.staff.widget.NavigationBar
    android:id="@+id/navigationbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <RelativeLayout
        android:id="@+id/navigationbar_leftbtn_clickarea_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="15dp"
        android:layout_marginLeft="16dp"
        android:paddingTop="14dp">

        <RelativeLayout
            android:id="@+id/navigationbar_leftbtn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:duplicateParentState="true">

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigationbar_message_show"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:text=""
        android:layout_toRightOf="@+id/navigationbar_leftbtn_clickarea_layout"
        android:layout_toEndOf="@+id/navigationbar_leftbtn_clickarea_layout" />

    <RelativeLayout
        android:id="@+id/navigationbar_rightbtn_clickarea_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="9dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="9dp">

        <RelativeLayout
            android:id="@+id/navigationbar_rightbtn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:duplicateParentState="true">
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/navigationbar_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:maxWidth="@dimen/navigationbar_max_width"-->
        <TextView
            android:id="@+id/navigationbar_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/navigationbar_right_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</com.yijian.staff.widget.NavigationBar>