<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tian_xie_hui_fang_result_navigation_bar"
        layout="@layout/view_navigation_bar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:button="@drawable/check_state"
            android:text="需要进行复访"
            android:textColor="#666666" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@drawable/check_state"
                android:checked="true"
                android:padding="5dp"
                android:text="否"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@drawable/check_state"
                android:padding="5dp"
                android:text="是"
                android:textColor="#666666" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sure_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/people"/>

        <TextView
            android:id="@+id/tv_sure_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="刘葛岩"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_sure_gender"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/lg_man"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_nav_header"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/people" />

                <TextView
                    android:id="@+id/tv_nav_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="刘葛岩"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_nav_gender"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/lg_man" />


            </LinearLayout>

            <View
                style="@style/SplitLineStyle"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="会员类型:"
                    android:textColor="@color/text_black3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_vip_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="会员类型:"
                    android:textColor="@color/text_black3"
                    android:textSize="14sp" />

            </RelativeLayout>


            <View style="@style/SplitLineStyle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="回访类型:"
                    android:textColor="@color/text_black3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_huifan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="回访类型"
                    android:textColor="@color/text_black3"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View style="@style/SplitLineStyle" />

            <EditText
                android:id="@+id/et_huifan_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="请填写你的回访记录"
                android:padding="3dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="140字"
                android:textColor="@color/textColor999999"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_sure"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/lin_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:padding="15dp">



            <View
                style="@style/SplitLineStyle"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/rel_huifan_time"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="复访时间:"
                    android:textColor="@color/text_black3"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_huifan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:textColor="@color/text_black3"
                    android:drawableRight="@mipmap/lg_arrow"
                    android:textSize="14sp"
                    android:drawablePadding="5dp"/>

            </RelativeLayout>

            <View
                style="@style/SplitLineStyle"/>

            <RelativeLayout
                android:id="@+id/rel_huifan_reason"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="复访原因:"
                    android:textColor="@color/text_black3"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_huifan_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:textColor="@color/text_black3"
                    android:drawableRight="@mipmap/lg_arrow"
                    android:textSize="14sp"
                    android:drawablePadding="5dp"/>

            </RelativeLayout>

            <View
                style="@style/SplitLineStyle"/>

        </LinearLayout>


    </RelativeLayout>





</LinearLayout>
