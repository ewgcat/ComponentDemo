<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_background_color"
              android:id="@+id/ll_root"
              android:orientation="vertical">

    <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/my_back_black"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/goods_search_top_edittext_bg_gray"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/home_serch"/>

            <!--<EditText-->
            <!--android:id="@+id/et_search"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:background="@null"-->
            <!--android:hint="输入产品名称，进行搜索"-->
            <!--android:imeOptions="actionSearch"-->
            <!--android:singleLine="true"-->
            <!--android:textColor="#666666"-->
            <!--android:textSize="14sp" />-->
            <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="输入产品名称，进行搜索"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColor="@color/time_bar"
                    android:textSize="14sp"/>

        </LinearLayout>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">


            <LinearLayout
                    android:id="@+id/ll_zong_he"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                <TextView
                        android:id="@+id/tv_zong_he"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="综合"
                        android:textColor="#666666"
                        android:textSize="14sp"/>


            </LinearLayout>


            <View
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"/>

            <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:drawableRight="@mipmap/jd_normal_arrow"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="价格"
                        android:textColor="#666666"
                        android:textSize="14sp"/>

            </LinearLayout>


            <View
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"/>

            <LinearLayout
                    android:id="@+id/ll_shai_xuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                <TextView
                        android:id="@+id/tv_shaixuan"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:drawableEnd="@mipmap/shaixuan_black"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="筛选"
                        android:textColor="#666666"
                        android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>


        <include
                layout="@layout/layout_base_smart_refresh_layout_recyclerview"/>

    </LinearLayout>

</LinearLayout>
