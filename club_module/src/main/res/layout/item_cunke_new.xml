<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="17dp">

            <TextView
                android:id="@+id/tv_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="增肌课"
                android:textColor="@color/black333333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_courseName"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/tv_courseName"
                android:includeFontPadding="false"
                android:text="陈牛哥"
                android:textColor="@color/black333333"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <View style="@style/SplitLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stockCourseCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/text_size_30" />


            <TextView
                android:id="@+id/tv_totalCourseCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:gravity="center"
                android:textColor="#1997f8"
                android:textSize="@dimen/text_size_30" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:gravity="center">

                <com.yijian.commonlib.widget.CircleProgressBar
                    android:id="@+id/cunkeProgress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:circleStrokeWidth="3dp"
                    app:textBaseSize="16sp"
                    app:textBaseStrokeWidth="1dp"
                    app:textSize="25sp"
                    app:textStrokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:layout_weight="1"
                android:gravity="center"
                android:text="存课数量(节)"
                android:textColor="@color/text_black3"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:layout_weight="1"
                android:gravity="center"
                android:text="课程总数量(节)"
                android:textColor="@color/text_black3"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:layout_weight="1"
                android:gravity="center"
                android:text="课时完成率"
                android:textColor="@color/text_black3"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
