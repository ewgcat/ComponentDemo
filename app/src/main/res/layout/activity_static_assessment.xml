<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/view_navigation_bar2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请拍一张全向的正面照和一张右侧照"
                android:textStyle="bold"
                android:textColor="@color/text_black1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_17"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="被测者双脚与髋同宽，穿紧身衣，可以让测试更准确"
                android:textColor="@color/text_black1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size_15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_positive"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@mipmap/left_photo"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="#cccccc"
                        android:text="正面示意图"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_positive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_blue_harlf_stroke"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:text="拍照"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_side"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@mipmap/right_right"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_15"
                        android:text="侧面示意图"
                        android:textColor="#cccccc"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_side"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_blue_harlf_stroke"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:text="拍照"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="完成"
                android:background="@drawable/shape_blue_half"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>