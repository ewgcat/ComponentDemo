<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dynamic_assessment.DynamicFragment3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="双脚开立，脚间距与肩同宽，双脚内侧平行，按202节奏做硬拉动作"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/text_black1"
            android:textSize="@dimen/text_size_17"/>

        <View
            style="@style/SplitLineStyle"
            android:layout_height="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#1996f8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="正面观"
                android:textStyle="bold"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="膝盖-左膝"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_positive_leftknee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="膝盖-右膝"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_positive_rightknee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肩部 高低肩"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_positive_jian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>


        <View
            style="@style/SplitLineStyle"
            android:layout_height="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#1996f8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="侧面观"
                android:textStyle="bold"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腰椎-盆骨-髋-盆骨"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_side_yao_pg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腰椎-盆骨-髋-腹部"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_side_yao_fb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>


        <View
            style="@style/SplitLineStyle"
            android:layout_height="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#1996f8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="背面观"
                android:textStyle="bold"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整体  整体偏移"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_bg_translate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>

        <View
            style="@style/SplitLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腰部  腰部两侧（多裂肌下段）"
                android:textColor="@color/text_black1"
                android:textSize="@dimen/text_size_17"/>

            <com.yijian.staff.dynamic_assessment.DynamicCheckGroup
                android:id="@+id/dynamic_bg_yb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>



    </LinearLayout>

</ScrollView>