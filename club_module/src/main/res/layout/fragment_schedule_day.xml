<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_color">
    <LinearLayout
        android:id="@+id/iv_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/send_button_bg"
        android:orientation="vertical" />
    <LinearLayout
        android:layout_above="@id/iv_edit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <com.yijian.commonlib.widget.MyScollView
                android:id="@+id/scoll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yijian.clubmodule.ui.course.schedule.day.DayCourseView
                    android:id="@+id/course_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp" />
            </com.yijian.commonlib.widget.MyScollView>





        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>


