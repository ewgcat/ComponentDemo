<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_fillet_white_8"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="45dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_icon"
            android:layout_width="7dp"
            android:layout_height="16dp"
            android:src="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_question"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="基础测量数据"
            android:textSize="16sp"
            android:textColor="@color/text_black1"/>

        <RelativeLayout
            android:id="@+id/rl_toggle"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_toggle"
                android:layout_centerVertical="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/lg_shouqi"
                android:text="收起"
                android:textSize="10sp"
                android:textColor="@color/text_black3"
                android:background="@drawable/shape_fillet_gray_10"
                />
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"/>
</LinearLayout>