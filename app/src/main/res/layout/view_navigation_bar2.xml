<?xml version="1.0" encoding="utf-8"?>
<com.yijian.staff.widget.NavigationBar2 xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/navigationbar2"
                                        android:background="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="44dp">

            <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp">
                <ImageView
                        android:id="@+id/iv_first_left"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:src="@mipmap/my_back_black"/>
            </LinearLayout>


            <ImageView
                    android:id="@+id/iv_second_left"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/lg_close"/>
        </LinearLayout>

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/text_black1"
                android:textSize="18sp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="20dp">
            <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:id="@+id/right_tv"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/text_black1"/>
        </LinearLayout>


    </LinearLayout>
    <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
</com.yijian.staff.widget.NavigationBar2>