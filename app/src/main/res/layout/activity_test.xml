<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexDirection="row"
            app:flexWrap="wrap">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="20%">


                <TextView
                    android:id="@+id/tv_jiao_cha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_rect_bg"
                    android:gravity="center"
                    android:text="较差"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="20%">


                <TextView
                    android:id="@+id/tv_he_ge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="合格"
                    android:textColor="#999999"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="20%">


                <TextView
                    android:id="@+id/tv_jiao_hao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="较好"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="20%">


                <TextView
                    android:id="@+id/tv_hen_hao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="很好"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexBasisPercent="20%">


                <TextView
                    android:id="@+id/tv_you_xiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="优秀"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seek_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_show_indicator="none"
            app:isb_show_thumb_text="true"
            app:isb_show_tick_marks_type="divider"
            app:isb_thumb_color="@color/blue"
            app:isb_thumb_drawable="@mipmap/arrows"
            app:isb_tick_marks_color="@color/white"
            app:isb_ticks_count="6"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/blue"
            app:isb_track_progress_size="6dp"
            app:isb_track_rounded_corners="true"
            app:isb_type="1"
            app:isb_user_seekable="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置" />
</android.support.constraint.ConstraintLayout>